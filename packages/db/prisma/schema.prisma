enum Difficulty {
  Easy
  Medium
  Hard
}

model Example {
  id Int @default(autoincrement()) @unique

  problemId   String
  inputText   String
  outputText  String
  explanation String?
  img         String?
  problem     Problem @relation(fields: [problemId], references: [problemId])
}

model TestCases {
  id Int @default(autoincrement()) @unique
  problemId   String
  input       String
  output      String
  problem     Problem @relation(fields: [problemId], references: [problemId])
}

model Problem {
  problemNumber   String?
  problemId       String @unique
  problemTitle    String
  inputText1      String
  inputText2      String
  inputText3      String
  difficulty      Difficulty
  likesCount      Int
  dislikeCount    Int
  examples        Example[]
  testCases       TestCases[]
  handlerFunc     String
  starterFunctionName String
}
